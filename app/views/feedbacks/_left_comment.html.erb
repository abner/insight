<li class="left clearfix">
  <span class="chat-img pull-left">
    <% if comment.user %>
      <img src="/images/50x50_blue.gif" alt="<%= comment.user.name  %>" class="img-circle">
    <% end %>
  </span>
  <div class="chat-body clearfix">
      <div class="header">
          <strong class="primary-font"><%= comment.user.name if comment.user %></strong>
          <small class="pull-right text-muted">
              <i class="fa fa-clock-o fa-fw"></i> <%= time_ago_in_words comment.created_at %>
              <%= if current_user_can?(:destroy_comment, comment)
                link_to   destroy_comment_feedback_target_feedback_form_feedback_path(feedback.feedback_form.feedback_target, feedback.feedback_form, feedback, :comment_id => comment.id),
                :method => 'delete',
                :data => {:confirm => t('feedback.comment.destroy_confirm'),:remote => true, 'original-title' => t('feedback.comment.remove_tooltip'), :toggle =>"tooltip", :placement => "top"} do %>
                  <i class="fa fa-minus fa-fw" alt='<%= t('feedback.comment.remove') %>'></i>
              <%
                end
              end %>
          </small>
      </div>
      <pre><%= comment.text %></pre>
  </div>
</li>
