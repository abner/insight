
<div class="row">
  <div class="col-lg-12">
    <h1 class='page-header'><%= t('feedback_form.title.feedback_form') %></h1>
  </div>
</div>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class='panel-title'><%= t('feedback_form.page_title.show') %></h3>
  </div>
  <div class="panel-body">
    <%= render :partial => 'form_static' %>
    <%= bootstrap_form_for @feedback_form, :url => url_for_form(@feedback_target, @feedback_form) do |f|  %>
      <%= render partial: 'attributes_table', locals: {f: f} %>
    <% end %>
    <hr />
    <label><%= t('feedback_form.widget_code')  %></label>
    <p>Adicione o código abaixo em sua página para habilitar o widget.</p>
    <blockquote>
      <p>
        <code>
          <%= render partial: 'widget_js' %>
        </code>
      </p>
    </blockquote>

    <hr />
    <%= link_to t('Editar'), edit_feedback_target_feedback_form_path(@feedback_form.feedback_target, @feedback_form), class: 'btn btn-success' %>

  </div>
  <!-- <div class="panel-footer">
  </div> -->
</div>
