<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            <%= translate('My applications') %>
        </h1>
        <!-- <ol class="breadcrumb">
            <li class="active">
                <i class="fa fa-dashboard"></i> Dashboard
            </li>
        </ol> -->
    </div>
</div>


<div class="panel panel-default">
  <div class="panel-heading">
      <h3 class="panel-title"><%= t('User Applications') %></h3>
  </div>
  <div class="panel-body">
    <% if @user_applications.empty? %>

      <p> <%= translate("No application registered yet") %></p>

      <div class=''>
        <%= link_to new_user_application_path, :class => 'btn btn-primary' do %>
          <i class="fa fa-desktop"></i> <%= t('Create new application') %>
        <% end %>
      </div>

    <% else  %>
    <div class="text-left">
        <%= link_to new_user_application_path, :class => 'btn btn-primary' do %>
        <i class="fa fa-desktop"></i> <%= t('Create new application') %>
        <% end %>
    </div>
    <hr />
    <%# raise "HERE" %>
      <div class="table-responsive">
          <table class="table table-bordered table-hover table-striped">
              <thead>
                  <tr>
                    <th><%= translate('Name') %></th>
                    <th><%= translate('Token') %></th>
                    <th><%= translate('Actions') %></th>
                  </tr>
              </thead>
              <tbody>
                 <% @user_applications.each do  |user_application | %>
                    <tr>
                      <td><%= link_to user_application.name, user_application_path(user_application) %></td>
                      <td><%= user_application.authentication_token %></td>
                      <td>
                        <%= render_action 'edit', user_application if current_user_can?(:write_user_application, user_application) %>
                        <%= render_action 'destroy', user_application if current_user_can?(:remove_user_application, user_application) %>
                        <%= render_action 'forms', user_application if current_user_can?(:write_user_application, user_application) %>
                      </td>
                    </tr>
                 <% end %>
              </tbody>
          </table>
      </div>
      <% end %>
  </div>
</div>
<script type='text/javascript'>
jQuery(document).on('ready page:load', function(){
  $('a[data-popover-confirm=true]').on('click', function(e){
    e.preventDefault();
    var element = $(this);
    var id_content = element.data('idContent');
    if(!element.data('bs.popover')){
      var options = {
                    title:  I18n.t("alertify.Confirmation", {defaultValue: "Confirmation"}),
                    content: $(id_content).html(),
                    html: true,
                    trigger: 'focus',
                    placement: 'bottom'
                  };
      $(element).popover(options).popover('show');
    }

  });
});


</script>
