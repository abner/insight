<%= content_tag :div, id: "confirm_user_app_#{user_application.id.to_s}", class: '', style: 'display:none' do %>
  <p class='text-info text-center'><%= t('user_application.confirmation_question') %></p>
  <div class='text-center'>
    <%= link_to(
          content_tag(:span, pad(translate('alertify.OK')), :class => 'btn btn-primary btn-sm'),
          user_application_path(user_application), :method=> 'DELETE')
        %>
    <span class="btn btn-default btn-sm"><%= t('alertify.Cancel') %></span>
  </div>
<% end %>

<%= link_to(
      content_tag(:span, pad(translate('Destroy')), :class => 'fa fa-trash-o'),
      '',
      id: "destroy_user_app_#{user_application.id.to_s}",
      :data => {'popover-confirm' => 'true', 'id-content' => "#confirm_user_app_#{user_application.id.to_s}"})
    %>
