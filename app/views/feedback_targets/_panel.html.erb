<div class="panel panel-default">
  <div class="panel-heading">
      <h3 class="panel-title"><%= t('User Applications') %></h3>
  </div>
  <div class="panel-body">
    <% if @feedback_targets.empty? %>

      <p> <%= translate("No application registered yet") %></p>

    <% else  %>

      <div class="table-responsive">
          <table class="table table-bordered table-hover table-striped">
              <thead>
                  <tr>
                    <th><%= translate('Name') %></th>
                    <th><%= translate('Token') %></th>
                    <th></th>
                  </tr>
              </thead>
              <tbody>
                 <% @feedback_targets.each do  |feedback_target | %>
                    <tr>
                      <td><%= link_to feedback_target.name, feedback_target_path(feedback_target) %></td>
                      <td><%= feedback_target.authentication_token %></td>
                      <td><%= link_to(
                          content_tag(:span, pad(translate('Feedbacks')) + " ", :class => 'fa fa-comment-o'),
                          feedback_target_feedbacks_path(feedback_target))%></td>
                    </tr>
                 <% end %>
              </tbody>
          </table>
      </div>
      <% end %>
      <div class="text-right">
          <%= link_to translate('All'), feedback_targets_path%>
      </div>
  </div>
</div>
