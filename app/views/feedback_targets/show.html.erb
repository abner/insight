<div class="panel panel-default">
  <div class="panel-heading">
      <h3 class="panel-title"><%= t('Application Info') %></h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-lg-8">
        <%= bootstrap_form_tag do |f| %>
        <div class="form-group">
          <label>Nome:</label> <%= @feedback_target.name %>
        </div>
        <div class="form-group">
           <%= link_to_if(
            @feedback_target.owner.id.eql?(current_user.id),
            content_tag(:span, pad(translate('Edit')), class: 'fa fa-edit'),
            edit_feedback_target_path(@feedback_target), :class=> 'action') do
            end
            %>
        </div>
        <% end %>
      </div>

    </div>

  </div>
  <div class="panel-footer">
          <%#= link_to(
            content_tag(:span, pad(translate('Feedbacks')) + " ", :class => 'fa fa-comment-o'),
            feedback_target_feedbacks_path(@feedback_target), class: 'btn btn-default')%>


          <%= link_to(
              content_tag(:span, pad(translate('Forms')) + " ", :class => 'fa fa-file-o'),
              feedback_target_feedback_forms_path(@feedback_target), class: 'btn btn-default')%>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t('feedback_target.panel_title.members') %></h3>
  </div>
  <div class="panel-body">
    <%= render :partial => 'members_edit' if  current_user_can?(:admin_team_members, @feedback_target)%>
  </div>
</div>

